<!DOCTYPE html>
<html>
  <body>
    <h2>New Contact Form Submission</h2>
    
    <p><strong>From:</strong> <%= @name %></p>
    <p><strong>Email:</strong> <%= @email %></p>
    <% if @phone.present? %>
      <p><strong>Phone:</strong> <%= @phone %></p>
    <% end %>
    <p><strong>Subject:</strong> <%= @subject %></p>
    
    <h3>Message:</h3>
    <p><%= @message %></p>
  </body>
</html> 